<%= turbo_stream.replace "result" do %>
  <div id="result" class="mt-10">
    <p id="breed-name" class="text-lg"><%= @message %></p>
    <% if @image_url %>
      <img id="breed-image" class="mt-3 rounded shadow-lg mx-auto" src="<%= @image_url %>" alt="<%= @breed %>">
    <% end %>
  </div>
<% end %>
<%= turbo_stream.update "breed-suggestions", "" %>